__author__ = "MkDVice"

nome = str(input('Digite seu nome: ')).strip()
print('''Analisando seu nome...
===================================''')
print('Seu nome em maiusculo é: {}'.format(nome.upper()))
print('Seu nome em minisculo é: {}'.format(nome.lower()))
print('Seu nome tem {} letras'.format(len(nome)))
print('''
 ==================================
 FIM DO PROGRAMA''')
